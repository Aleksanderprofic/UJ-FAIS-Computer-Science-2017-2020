#=========================================================
#				Makefile do zestawu 3
#=========================================================

CFLAGS := -O2 -Wall -c
RM := rm -f

.PHONY: all clean

all: prodkons.x fifo.x producent.x konsument.x

#=========================================================
# 			LINKOWANIE WYKONYWALNYCH PLIKÓW
#=========================================================

%.x: %.o
	gcc -std=c99 -o $@ $^

#=========================================================
# 			KOMPILOWANIE OBIEKTOWYCH PLIKÓW
#=========================================================

%.o: %.c
	gcc -std=c99 $(CFLAGS) -o $@ $<

#=========================================================
# 	Czyści katalog z plików obiektowych i wykonywalnych
#=========================================================
clean:
	$(RM) *.o *.x a.out
