#=========================================================
#				Makefile do zestawu 4
#=========================================================

CFLAGS := -O2 -Wall -c
RM := rm -f

.PHONY: all clean

all: sem.o libsem.a semuse.x prog.x powielacz.x

#=========================================================
# 			LINKOWANIE WYKONYWALNYCH PLIKÓW
#=========================================================

%.x: %.o
	gcc -std=c99 -L. -lsem -o $@ $^

#=========================================================
# 			KOMPILOWANIE OBIEKTOWYCH PLIKÓW
#=========================================================

%.o: %.c
	gcc -std=c99 $(CFLAGS) -o $@ $<

#=========================================================
# 			        BIBLIOTEKI
#=========================================================

libsem.a: sem.o
	ar rv $@ $^

#=========================================================
# 	Czyści katalog z plików obiektowych i wykonywalnych
#=========================================================
clean:
	$(RM) *.o *.x a.out *.a
