#=========================================================
#				Makefile do zestawu 7
#=========================================================

CFLAGS := -O2 -Wall -c
RM := rm -f

.PHONY: all

all: wykluczanie.x

#=========================================================
# 			LINKOWANIE WYKONYWALNYCH PLIKÓW
#=========================================================

%.x: %.o
	gcc -std=c99 -lpthread -o $@ $^

#=========================================================
# 			KOMPILOWANIE OBIEKTOWYCH PLIKÓW
#=========================================================

%.o: %.c
	gcc -std=c99 $(CFLAGS) -o $@ $<

#=========================================================
# 			        BIBLIOTEKI
#=========================================================

# BRAK

#=========================================================
# 	       Czyści katalog ze zbędnych plików
#=========================================================
.PHONY: clean

clean:
	$(RM) *.o *.x a.out *.a *.so
