#=========================================================
#				Makefile do zestawu 8
#=========================================================

FLAGS := -Wall -c -O3 -march=native
RM := rm -f

.PHONY: all

all: slownik.x

#=========================================================
# 			LINKOWANIE WYKONYWALNYCH PLIKÓW
#=========================================================

%.x: %.o
	g++ -std=c++11 -o $@ $^

#=========================================================
# 			KOMPILOWANIE OBIEKTOWYCH PLIKÓW
#=========================================================

%.o: %.cxx
	g++ -std=c++11 $(FLAGS) -o $@ $^

#=========================================================
# 	Czyści katalog z plików obiektowych i wykonywalnych
#=========================================================

.PHONY: clean
clean:
	$(RM) *.o *.x a.out
